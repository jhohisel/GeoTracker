<RelativeLayout
    android:id="@+id/login_form"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff97d992"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MyAccount">

    <TextView
        android:id="@+id/start_date_textview"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/end_date_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/end_date_button"

        android:gravity="center"
        android:hint="@string/start_date"
        android:textSize="18sp"
        android:background="#ffffffff" />

    <Button
        android:id="@+id/start_date_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:onClick="onClick"
        android:text="@string/change_date"
        android:background="#ff000000"
        android:textColor="#ff97d992"
        android:padding="5dp"/>


    <TextView
        android:id="@+id/end_date_textview"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/end_date_button"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/start_date_textview"
        android:layout_toStartOf="@+id/end_date_button"
        android:gravity="center"
        android:hint="@string/end_date"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:background="#ffffffff" />


    <Button
        android:id="@+id/end_date_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/start_date_button"
        android:layout_below="@+id/start_date_button"
        android:onClick="onClick"
        android:text="@string/change_date"
        android:textColor="#ff97d992"
        android:padding="5dp"
        android:background="#ff000000"
        android:layout_marginTop="15dp"/>


    <Button
        android:id="@+id/trajectory_button"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/end_date_button"
        android:layout_marginTop="25dp"
        android:background="#ff000000"
        android:text="@string/action_my_trajectory"
        android:textColor="#ff97d992"
        android:textSize="20sp"
        android:textStyle="bold"/>

</RelativeLayout>